# GramPulse Web3 Configuration
# Copy this file to .env and fill in your values

# ===========================================
# ENVIRONMENT
# ===========================================
# Options: development, staging, production
WEB3_ENVIRONMENT=development

# Enable/disable Web3 features (true/false)
# When disabled, app works in offline-first mode
WEB3_ENABLED=true

# Enable debug logging for Web3 operations
WEB3_DEBUG=true

# ===========================================
# BLOCKCHAIN
# ===========================================
# Custom RPC URL (leave empty to use default for network)
# For production, use a reliable RPC provider like Alchemy or Infura
# WEB3_RPC_URL=https://opt-sepolia.g.alchemy.com/v2/YOUR_API_KEY

# ===========================================
# ATTESTATION SERVICE
# ===========================================
# URL of the backend attestation middleware
ATTESTATION_SERVICE_URL=http://localhost:3000

# API key for authenticating with the attestation service
# This should match the API_KEY in backend/.env
ATTESTATION_API_KEY=your_api_key_here

# EAS Resolution Schema UID (will be set after schema deployment)
# EAS_RESOLUTION_SCHEMA_UID=0x...

# ===========================================
# IPFS (Pinata)
# ===========================================
# IPFS gateway for retrieving content
IPFS_GATEWAY_URL=https://gateway.pinata.cloud/ipfs

# IPFS API for uploads
IPFS_API_URL=https://api.pinata.cloud

# Pinata credentials (get from https://app.pinata.cloud/)
# PINATA_API_KEY=your_api_key
# PINATA_API_SECRET=your_api_secret
