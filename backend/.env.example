# GramPulse Attestation Service - Environment Configuration
# Copy this file to .env and fill in your values

# ===========================================
# SERVER
# ===========================================
PORT=3000
NODE_ENV=development

# ===========================================
# BLOCKCHAIN
# ===========================================
# Network: optimism-mainnet or optimism-sepolia
NETWORK=optimism-sepolia

# RPC URL (use Alchemy, Infura, or public RPC)
# Optimism Sepolia public RPC
RPC_URL=https://sepolia.optimism.io

# Private key for the attestation signer wallet
# This wallet will pay gas fees and sign attestations
# IMPORTANT: Use a dedicated wallet, not your main wallet!
# Format: 0x... (include the 0x prefix)
ATTESTER_PRIVATE_KEY=

# ===========================================
# EAS (Ethereum Attestation Service)
# ===========================================
# EAS Contract Address on Optimism
EAS_CONTRACT_ADDRESS=0x4200000000000000000000000000000000000021

# Schema Registry Address on Optimism
SCHEMA_REGISTRY_ADDRESS=0x4200000000000000000000000000000000000020

# GramPulse Resolution Schema UID (set after deploying schema)
# Leave empty to auto-deploy on first run
RESOLUTION_SCHEMA_UID=

# ===========================================
# SECURITY
# ===========================================
# API Key for authenticating requests from Flutter app
# Generate a strong random string
API_KEY=

# Allowed origins for CORS (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Rate limiting (requests per minute per IP)
RATE_LIMIT_RPM=60

# ===========================================
# IPFS (Pinata)
# ===========================================
# IPFS provider: pinata (default)
IPFS_PROVIDER=pinata

# Pinata API credentials (get from https://app.pinata.cloud/developers/api-keys)
IPFS_API_KEY=
IPFS_API_SECRET=

# ===========================================
# LOGGING
# ===========================================
LOG_LEVEL=debug
